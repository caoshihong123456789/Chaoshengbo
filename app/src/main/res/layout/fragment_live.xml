    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zuilot.chaoshengbo.module.LiveActivity">

    <include layout="@layout/viewpager_collspaningtoolbar_layout" />


    <android.support.v7.widget.RecyclerView
